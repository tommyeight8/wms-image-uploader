generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Order {
  id         String        @id @default(cuid())
  reference  String
  createdAt  DateTime      @default(now())
  images     OrderImage[]
}

model OrderImage {
  id        String   @id @default(cuid())
  orderId   String
  url       String
  createdAt DateTime @default(now())
  order     Order    @relation(fields: [orderId], references: [id])
}
